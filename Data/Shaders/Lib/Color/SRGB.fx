#ifndef _LIB_COLOR_SRGB_FX_INCLUDED
#define _LIB_COLOR_SRGB_FX_INCLUDED

namespace Color {
//----------------------------------------------------------------------------
//////////////////////////////////////////////////////////////////////////////
//----------------------------------------------------------------------------
float SRGB_to_Linear(float srgb) {
    return srgb * (srgb * (srgb * 0.305306011f + 0.682171111f) + 0.012522878f);
}
//----------------------------------------------------------------------------
float Linear_to_SRGB(float lin) {
    const float s1 = sqrt(lin);
    const float s2 = sqrt(s1);
    const float s3 = sqrt(s2);
    return 0.585122381f * s1 + 0.783140355f * s2 - 0.368262736f * s3;
}
//----------------------------------------------------------------------------
//////////////////////////////////////////////////////////////////////////////
//----------------------------------------------------------------------------
float3 SRGB_to_Linear(float3 srgb) {
    return srgb * (srgb * (srgb * 0.305306011f + 0.682171111f) + 0.012522878f);
}
//----------------------------------------------------------------------------
float3 Linear_to_SRGB(float3 lin) {
    const float3 s1 = sqrt(lin);
    const float3 s2 = sqrt(s1);
    const float3 s3 = sqrt(s2);
    return 0.585122381f * s1 + 0.783140355f * s2 - 0.368262736f * s3;
}
//----------------------------------------------------------------------------
//////////////////////////////////////////////////////////////////////////////
//----------------------------------------------------------------------------
float4 SRGB_to_Linear(float4 srgba) {
    return float4(SRGB_to_Linear(srgba.rgb), srgba.a);
}
//----------------------------------------------------------------------------
float4 Linear_to_SRGB(float4 lina) {
    return float4(Linear_to_SRGB(lina.rgb), lina.a);
}
//----------------------------------------------------------------------------
//////////////////////////////////////////////////////////////////////////////
//----------------------------------------------------------------------------
} //!namespace Color

#endif //!_LIB_COLOR_SRGB_FX_INCLUDED
