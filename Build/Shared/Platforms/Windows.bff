#once

//------------------------------------------------------------------------------
// Shared PC Platform
//------------------------------------------------------------------------------
.SharedPlatformWindowsBase =
[
    Using( .SharedBasePlatform )

    .PlatformDefines +
    {
        'PLATFORM_PC',
        'PLATFORM_WINDOWS',
        'WIN32',
        '__WINDOWS__',
    }
]

//------------------------------------------------------------------------------
// Shared X86 Platform
//------------------------------------------------------------------------------
.SharedPlatformX86 =
[
    Using( .SharedPlatformWindowsBase )
    Using( .SharedArchX86 )

    .Platform = 'Win32'
    .PlatformDefines + { '_WIN32' } + .ArchDefines

    ; For visual studio
    .SolutionPlatform = 'Win32'
]
.AllSharedPlatforms = { .SharedPlatformX86 }

//------------------------------------------------------------------------------
// Shared X64 Platform
//------------------------------------------------------------------------------
.SharedPlatformX64 =
[
    Using( .SharedPlatformWindowsBase )
    Using( .SharedArchX64 )

    .Platform = 'Win64'
    .PlatformDefines + { '_WIN64' } + .ArchDefines

    ; For visual studio
    .SolutionPlatform = 'x64'
]
.AllSharedPlatforms + .SharedPlatformX64
