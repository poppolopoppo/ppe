#once

//------------------------------------------------------------------------------
// Shared Base Mac Platform
//------------------------------------------------------------------------------
.SharedPlatformMacOSBase
[
    Using( .SharedBasePlatform )

    .PlatformDefines + { 'PLATFORM_POSIX', 'PLATFORM_MACOSX' }
]

//------------------------------------------------------------------------------
// Shared MacOS Platform (32 bits)
//------------------------------------------------------------------------------
.SharedPlatformMacOS
[
    Using( .SharedPlatformMacOSBase )
    Using( .SharedArchX86 )

    .Platform = 'MacOS'
    .PlatformDefines + .ArchDefines
]
.AllSharedPlatforms = { .SharedPlatformMacOS }

//------------------------------------------------------------------------------
// Shared MacOS Platform (64 bits)
//------------------------------------------------------------------------------
.SharedPlatformMac64 =
[
    Using( .SharedPlatformMacOSBase )
    Using( .SharedArchX64 )

    .Platform = 'Mac64'
    .PlatformDefines + .ArchDefines
]
.AllSharedPlatforms + .SharedPlatformMac64
