#once

//------------------------------------------------------------------------------
// Shared Base Configuration
//------------------------------------------------------------------------------
.SharedBaseConfig =
[
    .ConfigDefines =
    {
        ; Global defines for config and platforms
    }
]

.AllSharedConfigs   = {}

//------------------------------------------------------------------------------
// Shared Debug Configuration
//------------------------------------------------------------------------------
.SharedDebugConfig =
[
    Using( .SharedBaseConfig )

    .Config = 'Debug'
    .ConfigDefines + { "DEBUG", "_DEBUG" }
    .ConfigLinkType = 'Lib'
]
.AllSharedConfigs = { .SharedDebugConfig }

//------------------------------------------------------------------------------
// Shared FastDebug Configuration
//------------------------------------------------------------------------------
.SharedFastDebugConfig =
[
    Using( .SharedBaseConfig )

    .Config = 'FastDebug'
    .ConfigDefines + { "FASTDEBUG", "_DEBUG", "DEBUG" }
    .ConfigLinkType = 'Lib' //'Dll' // %_NOCOMMIT% just wwwway too bothersome ...
]
.AllSharedConfigs + .SharedFastDebugConfig

//------------------------------------------------------------------------------
// Shared Release Configuration
//------------------------------------------------------------------------------
.SharedReleaseConfig =
[
    Using( .SharedBaseConfig )

    .Config = 'Release'
    .ConfigDefines + { "RELEASE", "NDEBUG" }
    .ConfigLinkType = 'Lib'
]
.AllSharedConfigs + .SharedReleaseConfig

//------------------------------------------------------------------------------
// Shared Profiling Configuration
//------------------------------------------------------------------------------
.SharedProfilingConfig =
[
    Using( .SharedBaseConfig )

    .Config = 'Profiling'
    .ConfigDefines + { "RELEASE", "NDEBUG", "PROFILING_ENABLED" }
    .ConfigLinkType = 'Lib'
]
.AllSharedConfigs + .SharedProfilingConfig

//------------------------------------------------------------------------------
// Shared Final Configuration
//------------------------------------------------------------------------------
.SharedFinalConfig =
[
    Using( .SharedBaseConfig )

    .Config = 'Final'
    .ConfigDefines + { "FINAL_RELEASE", "RELEASE", "NDEBUG" }
    .ConfigLinkType = 'Lib'
]
.AllSharedConfigs + .SharedFinalConfig
