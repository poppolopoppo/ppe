#once

#include "CLangBase.bff"

//------------------------------------------------------------------------------
// Global Properties
//------------------------------------------------------------------------------

.CLang6BinPath = .LLVM_6_PATH
Print( "Using CLang-6 installation found in '$CLang6BinPath$'" )

//------------------------------------------------------------------------------
// CLang 6.0 (x86 + x64)
//------------------------------------------------------------------------------
Compiler( 'Compiler-CLang6' )
{
    .Root       = '$CLang6BinPath$'
    .Executable = '$Root$/clang++'
}

//------------------------------------------------------------------------------
// Pre-Compiled Headers Configurations
//------------------------------------------------------------------------------

.CLang6PCHEnabled     = .CLangBasePCHEnabled
.CLang6PCHDisabled    = .CLangBasePCHDisabled

//------------------------------------------------------------------------------
// Base Config
//------------------------------------------------------------------------------
.CLang6BaseConfig =
[
    .Defines = {}
    .ExecutableOptions = ''
    .ExecutableDeps = {}
    .CompilerOptions = ''
    .AdditionalOptions = ''
    .LinkerOptions = ''
    .SystemIncludePaths = {}
]

//------------------------------------------------------------------------------
// Platforms
//------------------------------------------------------------------------------
.CLang6BasePlatform =
[
    Using( .CLang6BaseConfig )

    .Compiler           = 'Compiler-CLang6'

    .Librarian          = '$CLang6BinPath$/llvm-ar'
    .Linker             = '$CLang6BinPath$/clang'

    .CompilerOptions    + ''

    .LinkerOptions      + ''
]
.CLang6PlatformX86 = .CLang6BasePlatform + .CLangBasePlatformX86
.CLang6PlatformX64 = .CLang6BasePlatform + .CLangBasePlatformX64

//------------------------------------------------------------------------------
// Configurations
//------------------------------------------------------------------------------

.CLang6_X86Debug      = .CLang6PlatformX86   + .CLangBaseDebugConfig
.CLang6_X86FastDebug  = .CLang6PlatformX86   + .CLangBaseFastDebugConfig
.CLang6_X86Release    = .CLang6PlatformX86   + .CLangBaseReleaseConfig
.CLang6_X86Profiling  = .CLang6PlatformX86   + .CLangBaseProfilingConfig
.CLang6_X86Final      = .CLang6PlatformX86   + .CLangBaseFinalConfig

.CLang6_X64Debug      = .CLang6PlatformX64   + .CLangBaseDebugConfig
.CLang6_X64FastDebug  = .CLang6PlatformX64   + .CLangBaseFastDebugConfig
.CLang6_X64Release    = .CLang6PlatformX64   + .CLangBaseReleaseConfig
.CLang6_X64Profiling  = .CLang6PlatformX64   + .CLangBaseProfilingConfig
.CLang6_X64Final      = .CLang6PlatformX64   + .CLangBaseFinalConfig

.CLang6CompileConfigs =
{
    // X86
    .CLang6_X86Debug,
    .CLang6_X86FastDebug,
    .CLang6_X86Release,
    .CLang6_X86Profiling,
    .CLang6_X86Final,

    // X64
    .CLang6_X64Debug,
    .CLang6_X64FastDebug,
    .CLang6_X64Release,
    .CLang6_X64Profiling,
    .CLang6_X64Final,
}
