
//------------------------------------------------------------------------------
// Register Project in Global Project List
//------------------------------------------------------------------------------
; Inputs :
;   <ProjectName>           name of the project
//------------------------------------------------------------------------------

^ProjectList + .ProjectName

.SolutionFolder =
[
    .ProjectSolutionFolder ? ''
    .Path = .ProjectSolutionFolder
    .Projects = { "$ProjectName$-Proj" }
]

.ProjectSolutionFolder ? '^$'
^SolutionFolders + .SolutionFolder

Print( "Registered project <$ProjectSolutionFolder$/$ProjectName$>" )
