//------------------------------------------------------------------------------
// Microsoft DirectX SDK
//------------------------------------------------------------------------------
{
    #import DXSDK_DIR

    .DirectXSDKPath = '$DXSDK_DIR$'

    Print( "Using DirectX SDK from '$DirectXSDKPath$'" )

    .ExternalCompileConfigs = {}
    ForEach( .CompileConfig in .AllCompileConfigs )
    {
        .ExternalConfig =
        [
            Using( .CompileConfig )

            .IncludePaths       + '$DirectXSDKPath$\Include'
            .LinkerOptions      + ' /LIBPATH:"$DirectXSDKPath$\Lib\$Arch$"'
        ]
        ^ExternalCompileConfigs + .ExternalConfig
    }

    ^AllCompileConfigs = .ExternalCompileConfigs
}
